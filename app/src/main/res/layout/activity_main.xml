<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/Beige">

    <com.example.andersen4.CustomClock
        android:id="@+id/myClock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:centerColor="@color/Black"
        app:clockColor="@color/Black"
        app:digitalClockColor="@color/Black"
        app:fontSize="5sp"
        app:hourArrowColor="@color/Black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:clockBackgroundColor="@color/white"
        app:minuteArrowColor="@color/Black"
        app:numbersColor="@color/Black"
        app:secondsArrowColor="@color/Red"
        app:showDigitalClock="true"
        app:strokeWidth="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>