<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/Beige">

    <com.example.andersen4.CustomClock
        android:id="@+id/myClock"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:showDigitalClock="true"
        app:centerColor="@color/Blue"
        app:numbersColor="@color/YellowGreen"
        app:clockColor="@color/IndianRed"
        app:digitalClockColor="@color/Bisque"
        app:minuteArrowColor="@color/GreenYellow"
        app:secondsArrowColor="@color/Black"
        app:hourArrowColor="@color/IndianRed"
        app:rectBackgroundColor="@color/white"
        app:fontSize="5sp"
        app:strokeWidth="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>